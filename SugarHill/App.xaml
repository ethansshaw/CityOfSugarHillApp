<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SugarHill.App">
	<Application.Resources>
		<ResourceDictionary>
			<Color x:Key="LightTan">#d8dabd</Color>
			<Color x:Key="LighterGreen">#a9ba73</Color>
			<Color x:Key="MediumGreen">#9bb06e</Color>
			<Color x:Key="DarkerGreen">#72a355</Color>
			<Color x:Key="BrightGreen">#78ab36</Color>
			<Color x:Key="DeepBrown">#73655e</Color>
			<Color x:Key="BrightOrange">#e7462e</Color>
			<Color x:Key="White">#ffffff</Color>
			<ControlTemplate x:Key="MainTemplate">
				<StackLayout Orientation="Vertical" BackgroundColor="{StaticResource DarkerGreen}">
					<StackLayout.Padding>
						<OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" WinPhone="20,20,20,20" />
					</StackLayout.Padding>
					<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
						<Image Source="city_logo.png" WidthRequest="40" Aspect="AspectFit" HorizontalOptions="CenterAndExpand" />
					</StackLayout>
					<ContentPresenter BackgroundColor="{StaticResource LightTan}" VerticalOptions="FillAndExpand" />
				</StackLayout>
			</ControlTemplate>
		</ResourceDictionary>
	</Application.Resources>
</Application>